div 
	img 
		width 100%
		height auto
		display block
		margin 0 auto

h3 
	text-align center

.menu 
	& > ul 
		list-style none
		font-size 1.2em
		text-align justify
	a 
		text-decoration none
		&:hover 
			background-color lightgray

.item1,
.item2,
.item3 
	display flex
	padding 5px

.picture 
	width 30%
	margin 5px
	img 
		&:hover 
			border 1px solid black

.text 
	width 70%
	margin 5px
	text-align justify
	font-size 1.2em